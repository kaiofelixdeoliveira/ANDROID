<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secundaria2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/editPesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pesquisa"
            android:layout_weight="1.07" />

        <Button
            android:id="@+id/btnPesquisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar" />

    </LinearLayout>

    <Button
        android:id="@+id/btnListaVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff1023"
        android:text="Clique para ver mais detalhes" />

    <ListView
        android:id="@+id/listaEntreg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:divider="#FFECEC"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="true"
        android:fastScrollEnabled="false"
        android:fastScrollStyle="@android:color/background_dark"
        android:focusable="true"
        android:paddingTop="20dp"></ListView>


</LinearLayout>
