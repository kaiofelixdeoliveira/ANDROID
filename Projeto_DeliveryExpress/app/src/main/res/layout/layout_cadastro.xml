<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secundaria2"
    android:orientation="vertical"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >

        <TextView
            android:text="@string/TituloCad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffd648"
            android:gravity="center_horizontal"
            android:textColor="#010000"/>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/editSexo">

        <RadioButton
            android:id="@+id/editSexMasc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"/>

        <RadioButton
            android:id="@+id/editSexFem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino"/>
</RadioGroup>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/editTipo">

        <RadioButton
            android:id="@+id/editCadEntreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entregador"/>

        <RadioButton
            android:id="@+id/editCadCli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente" />

</RadioGroup>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

        <TextView android:text="@string/NomeCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.76"
            />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/EnderecoCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.51" />

        <EditText
            android:id="@+id/editEndereco"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress" />

    </LinearLayout>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/IdadeCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.66" />

        <EditText
            android:id="@+id/editIdade"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:editable="false"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/UsuarioCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.66" />

        <EditText
            android:id="@+id/editUsuario"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/SenhaCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.66" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rdbPessoa">

            <RadioButton
                android:id="@+id/rdbFisica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fisica"/>

            <RadioButton
                android:id="@+id/rdbJuridica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juridica" />

        </RadioGroup>
        </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/CNPJCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.66" />

        <EditText
            android:id="@+id/editCNPJ"
            android:layout_width="202dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/CPFCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.82" />

        <EditText
            android:id="@+id/editCPF"
            android:layout_width="206dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/EstadoCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.66" />

        <Spinner
            android:id="@+id/spinerEstad"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center"
        android:weightSum="1">


        <TextView android:text="@string/CidadeCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010000"
            android:paddingLeft="10dp"
            android:layout_weight="0.66" />

        <EditText
            android:id="@+id/editCidade"
            android:layout_width="204dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:gravity="top|center"
       >

        <Button
            android:text="Cadastrar"
            android:id="@+id/btncadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:singleLine="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:id="@+id/btnCadVolt" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:gravity="top|center"
        >


    </LinearLayout>
    </LinearLayout>

</ScrollView>
