<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secundaria2"
    android:orientation="vertical"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffd648"
                android:gravity="center_horizontal"
                android:text="Cadastrar Nova Entrega"
                android:textColor="#010000" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Endereco"
                android:textColor="#010000"
                android:layout_weight="0.30" />

            <EditText
                android:id="@+id/editEntregEndereco"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.42" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.46"
                android:paddingLeft="10dp"
                android:text="Cidade"
                android:textColor="#010000" />

            <EditText
                android:id="@+id/editEntregCidade"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Numero"
                android:textColor="#010000" />

            <EditText
                android:id="@+id/editEntregNumero"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:editable="false"
                android:inputType="number"
                android:layout_weight="0.16" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:paddingLeft="10dp"
                android:text="Estado"
                android:textColor="#010000" />

            <Spinner
                android:id="@+id/spinerEntregEstado"
                android:layout_width="206dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Ponto De Ref."
                android:textColor="#010000" />

            <EditText
                android:id="@+id/editEntregPontRef"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                 />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Horário da Entrega"
                android:textColor="#010000" />

            <TimePicker
                android:id="@+id/editEntregHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textColor="#010000" />

         <!--   <EditText

                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:inputType="time" />

-->
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Prazo Entrega Até:"
                android:textColor="#010000" />

            <DatePicker
                android:id="@+id/editEntregPrazo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prazo de Entrega"
                android:textColor="#010000" />

           <!-- <EditText

                android:layout_width="203dp"
                android:layout_height="wrap_content" />

-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnEntregCadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="Proximo" />

            <Button
                android:id="@+id/btnEntregVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>
